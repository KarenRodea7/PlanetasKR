<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlanetasKR" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PlanetasKR" parent="Base.Theme.PlanetasKR" />
    <style name="Inicio" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/cielo</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">20dp</item>
        <item name="buttonStyle">@style/Button</item>
    </style>

    <style name="Lista" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#1E162C</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">inherit</item>

    </style>

    <style name="Entrada">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Descripciones">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="Titulos">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#7283E4</item>
    </style>

    <style name="DatosP">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">#6A0EA1</item>
    </style>
    
    <style name="DatoUser">
        <item name="android:textColor">#7CFFFFFF</item>
        <item name="android:textColorHint">#7CFFFFFF</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DatoPass">
        <item name="android:textColor">#7CFFFFFF</item>
        <item name="android:textColorHint">#7CFFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:inputType">textPassword</item>
    </style>
</resources>